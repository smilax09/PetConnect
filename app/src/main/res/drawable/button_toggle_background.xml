<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- When the button is not selected -->
    <item android:state_checked="false">
        <shape xmlns:android="http://schemas.android.com/apk/res/android">
            <solid android:color="#D3D3D3" /> <!-- Gray color -->
            <corners android:radius="1000dp" /> <!-- Rounded corners, adjust as needed -->
        </shape>
    </item>
    <!-- When the button is selected -->
    <item android:state_checked="true">
        <shape xmlns:android="http://schemas.android.com/apk/res/android">
            <solid android:color="?android:colorPrimary" /> <!-- Your normal color when selected -->
            <corners android:radius="100dp" /> <!-- Rounded corners, adjust as needed -->
        </shape>
    </item>
</selector>
